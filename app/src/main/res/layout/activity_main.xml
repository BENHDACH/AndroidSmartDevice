<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TitleMain"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/infoCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/app_creator"
        app:layout_constraintBottom_toTopOf="@+id/cadrePlatine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMain" />

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue_soft"
        android:text="@string/ButtonMScan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleMain"
        app:layout_constraintVertical_bias="0.805" />

    <View
        android:id="@+id/cadrePlatine"
        android:layout_width="396dp"
        android:layout_height="410dp"
        android:background="@color/platinium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <View
        android:id="@+id/cadreBleu"
        android:layout_width="182dp"
        android:layout_height="187dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="116dp"
        android:background="#03A9F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cadreJaune"
        android:layout_width="182dp"
        android:layout_height="187dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#F4B803"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadreBleu" />

    <View
        android:id="@+id/cadreVert"
        android:layout_width="182dp"
        android:layout_height="187dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#10C518"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadreRosee" />

    <View
        android:id="@+id/cadreRosee"
        android:layout_width="182dp"
        android:layout_height="187dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="15dp"
        android:background="#E44E6C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bluetoothLogo"
        android:layout_width="86dp"
        android:layout_height="68dp"
        android:layout_marginBottom="532dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cadreBleu"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/cadreBleu"
        app:layout_constraintTop_toTopOf="@+id/cadreBleu"
        app:layout_constraintVertical_bias="0.205"
        app:srcCompat="@drawable/bluetooth_icone" />

    <ImageView
        android:id="@+id/iconeLed"
        android:layout_width="101dp"
        android:layout_height="73dp"
        android:tint="@color/yellow"
        app:layout_constraintEnd_toEndOf="@+id/cadreVert"
        app:layout_constraintStart_toStartOf="@+id/cadreVert"
        app:layout_constraintTop_toTopOf="@+id/cadreVert"
        app:srcCompat="@drawable/led" />

    <ImageView
        android:id="@+id/deviceIcone"
        android:layout_width="102dp"
        android:layout_height="77dp"
        app:layout_constraintEnd_toEndOf="@+id/cadreJaune"
        app:layout_constraintStart_toStartOf="@+id/cadreJaune"
        app:layout_constraintTop_toTopOf="@+id/cadreJaune"
        app:srcCompat="@drawable/connected" />

    <ImageView
        android:id="@+id/listIcone"
        android:layout_width="110dp"
        android:layout_height="71dp"
        app:layout_constraintEnd_toEndOf="@+id/cadreRosee"
        app:layout_constraintStart_toStartOf="@+id/cadreRosee"
        app:layout_constraintTop_toTopOf="@+id/cadreRosee"
        app:srcCompat="@drawable/list" />

    <TextView
        android:id="@+id/textBlue"
        android:layout_width="160dp"
        android:layout_height="67dp"
        android:layout_marginBottom="40dp"
        android:text="@string/descriptionBlue"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cadreBleu"
        app:layout_constraintEnd_toEndOf="@+id/cadreBleu"
        app:layout_constraintStart_toStartOf="@+id/cadreBleu" />

    <TextView
        android:id="@+id/textRed"
        android:layout_width="160dp"
        android:layout_height="74dp"
        android:layout_marginBottom="32dp"
        android:text="@string/descriptionRed"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cadreRosee"
        app:layout_constraintEnd_toEndOf="@+id/cadreRosee"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toStartOf="@+id/cadreRosee" />

    <TextView
        android:id="@+id/textYellow"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginBottom="50dp"
        android:text="@string/descriptionYellow"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cadreJaune"
        app:layout_constraintEnd_toEndOf="@+id/cadreJaune"
        app:layout_constraintStart_toStartOf="@+id/cadreJaune" />

    <TextView
        android:id="@+id/textGreen"
        android:layout_width="156dp"
        android:layout_height="66dp"
        android:layout_marginBottom="36dp"
        android:text="@string/descriptionGreen"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cadreVert"
        app:layout_constraintEnd_toEndOf="@+id/cadreVert"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/cadreVert" />

    <ImageView
        android:id="@+id/notDoneIcone"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:tint="#D85353"
        app:layout_constraintBottom_toBottomOf="@+id/cadreVert"
        app:layout_constraintEnd_toEndOf="@+id/cadreVert"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cadreVert"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageView
        android:id="@+id/checkBlue"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadreBleu"
        app:layout_constraintEnd_toEndOf="@+id/cadreBleu"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cadreBleu"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/checkYellow"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadreJaune"
        app:layout_constraintEnd_toEndOf="@+id/cadreJaune"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cadreJaune"
        app:srcCompat="@drawable/check" />

    <ImageView
        android:id="@+id/checkRed"
        android:layout_width="27dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/cadreRosee"
        app:layout_constraintEnd_toEndOf="@+id/cadreRosee"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/cadreRosee"
        app:srcCompat="@drawable/check" />

</androidx.constraintlayout.widget.ConstraintLayout>